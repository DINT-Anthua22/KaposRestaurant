<UserControl x:Class="KaposRestaurant.View.ConsultarPedido"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KaposRestaurant.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate x:Key="Detalles">
            <TextBlock>
                <Run Text="Nº Elementos"/>
                <Run Text="{Binding Path=ELEMENTOS.Count}"/>
            </TextBlock>
        </DataTemplate>
    </UserControl.Resources>
    <StackPanel>
        <DataGrid x:Name="ConsultarPedidosDataGrid" ItemsSource="{Binding Comandas}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Fecha Pedido" Binding="{Binding FechaComanda}" Width="*"/>
                <DataGridCheckBoxColumn Header="Enviado" Width="*" Binding="{Binding Servida}"/>
                <DataGridTextColumn Header="Precio"  Width="*"/>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Elementos:" FontWeight="Bold"/>
                        <ListBox x:Name="ElementosListBox" ItemsSource="{Binding Elementos}"></ListBox>
                        <TextBlock>
                            <Run Text="Precion Con IVA:" FontWeight="Bold"/>
                            <Run Text=""/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Precion Sin IVA" FontWeight="Bold"/>
                            <Run Text=""/>
                        </TextBlock>
                        
                    </StackPanel>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
    </StackPanel>
</UserControl>

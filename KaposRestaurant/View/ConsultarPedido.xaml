<UserControl x:Class="KaposRestaurant.View.ConsultarPedido"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KaposRestaurant.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <DataGrid x:Name="ConsultarPedidosDataGrid" ItemsSource="{Binding}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Fecha Pedido" Binding="{Binding Pedido}"/>
                <DataGridCheckBoxColumn Header="Enviado" Binding="{Binding Enviado}"/>
                <DataGridTextColumn Header="Precio" Binding="{Binding Precio}"/>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Elementos:" FontWeight="Bold"/>
                        <ListBox x:Name="ElementosListBox" ItemsSource="{Binding}"></ListBox>
                        <TextBlock>
                            <Run Text="Precion Con IVA:" FontWeight="Bold"/>
                            <Run Text="{Binding PrecionIva}"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Precion Sin IVA" FontWeight="Bold"/>
                            <Run Text="{Binding PrecioSinIva}"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
    </StackPanel>
</UserControl>
